<odoo>
    <data noupdate="1">

        <!-- ✅ Define a new "Purchase Requisition" category -->
        <record id="purchase_requisition_category" model="ir.module.category">
            <field name="name">Purchase Requisition</field>
            <field name="sequence">15</field>
            <field name="description">Roles related to Purchase Requisition process</field>
        </record>

        <!-- ✅ Custom groups under that category -->
        <record id="group_purchase_requisition_staff" model="res.groups">
            <field name="name">Staff</field>
            <field name="category_id" ref="custom_purchase.purchase_requisition_category"/>
        </record>

        <record id="group_purchase_requisition_reviewer" model="res.groups">
            <field name="name">Reviewer</field>
            <field name="category_id" ref="custom_purchase.purchase_requisition_category"/>
        </record>

        <record id="group_purchase_requisition_approve" model="res.groups">
            <field name="name">Approver</field>
            <field name="category_id" ref="custom_purchase.purchase_requisition_category"/>
        </record>

        <record id="group_purchase_requisition_authorizer" model="res.groups">
            <field name="name">Authorizer</field>
            <field name="category_id" ref="custom_purchase.purchase_requisition_category"/>
        </record>


    </data>
</odoo>
