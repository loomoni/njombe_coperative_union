<?xml version="1.0" encoding="UTF-8"?>
<templates id="template_sidebar" xml:space="preserve">

    <t t-inherit="web.NavBar.AppsMenu" t-inherit-mode="extension" owl="1">
        <xpath expr="//Dropdown" position="replace">
            <img src="/odoo_sidebar/static/src/img/burger-menu.svg" alt="" class="img img-fluid burger-menu" t-on-click="(ev) => onToggleMenu(ev)"/>
            <ul class="o_menu_apps" role="menu">
                <li class="dropdown">
                    <a class="full" data-toggle="dropdown" data-display="static" href="#" accesskey="h">
                        <i class="fa fa-th-large"/>
                    </a>
                    <div class="dropdown-menu d-block" role="menu">
                        <div>
<!--                            <img src="/odoo_sidebar/static/src/img/logo.svg" class="img img-fluid p-4 mb-5"/>-->
                            <img src="/odoo_sidebar/static/src/img/logo1.JPEG" class="img img-fluid mb-1"/>
<!--                            <h2>T C C I A</h2>-->
                        </div>
                        <t t-foreach="menuService.getApps()" t-as="app">
                            <a role="menuitem" t-att-href="getMenuItemHref(app)"
                                class="dropdown-item o_app d-flex align-items-center"
                                t-att-class="{ active: menuService.getCurrentApp() === app }"
                                t-att-data-menu-id="app.menuID"
                                t-att-data-menu-xmlid="app.xmlID"
                                t-att-data-action-id="app.actionID">
                                <div class="p-2 mr-2 o_app_icon">
<!--                                    <i t-attf-class="fa {{app.icon}}"/>-->
                                    <i t-attf-class="fa fa-bars"/>
                                </div>
                                <span t-esc="app.name"/>
                            </a>
                        </t>
                    </div>
                </li>
            </ul>
        </xpath>
    </t>


</templates>
